---
import "./styles.css";

import IconArrowRight from "@public/icons/icon-arrow-right.svg";
---

<footer class="footer">
	<div class="footer__container o-container">
		<!-- Newsletter Subscription Form -->
		<div class="footer__section footer__newsletter">
			<h3 class="footer__title">Suscríbete a nuestro Newsletter</h3>
			<p class="footer__text">
				Recibe noticias, promociones y eventos exclusivos directamente
				en tu bandeja de entrada.
			</p>

			<form
				class="newsletter-form"
				action="#"
				method="POST"
			>
				<label
					class="a-input__label"
					for="email-newsletter"
				>
					<span>Tu email</span>
					<input
						class="a-input"
						id="email-newsletter"
						name="email"
						type="email"
						placeholder="correo@ejemplo.com"
						required
					/>
					<span class="a-input__error"
						>Por favor, ingresa un correo electrónico válido</span
					>
				</label>

				<button
					class="a-button a-button--primary newsletter-button"
					type="submit"
				>
					Suscribirme
					<IconArrowRight />
				</button>
			</form>
		</div>

		<!-- Location and Contact Information -->
		<div class="footer__section footer__location">
			<h3 class="footer__title">Encuéntranos</h3>
			<address class="footer__address">
				<p>Av. Libertad 1234</p>
				<p>San Salvador de Jujuy, Jujuy</p>
				<p>Argentina</p>
				<p class="footer__contact">Tel: +54 (388) 123-4567</p>
				<p class="footer__contact">Email: info@infinitygym.com</p>
			</address>

			<!-- Embedded Map -->
			<div class="footer__map">
				<iframe
					src="https://www.openstreetmap.org/export/embed.html?bbox=-65.31,-24.20,-65.27,-24.17&layer=mapnik"
					width="100%"
					height="200"
					style="border: var(--border-025) solid var(--border-tertiary); border-radius: var(--border-radius-2);"
					title="Mapa ubicación Infinity Gym"
					loading="lazy"
				></iframe>
			</div>
		</div>

		<!-- Hours and Social Media -->
		<div class="footer__section footer__social">
			<h3 class="footer__title">Horarios</h3>
			<ul class="footer__hours">
				<li><span>Lunes a Viernes:</span> 7:00 - 22:00</li>
				<li><span>Sábados:</span> 9:00 - 18:00</li>
				<li><span>Domingos:</span> 10:00 - 14:00</li>
			</ul>

			<h3 class="footer__title">Síguenos</h3>
			<ul class="footer__social-links o-ui-list--horizontal">
				<li>
					<a
						href="https://instagram.com"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="Síguenos en Instagram"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							><rect
								x="2"
								y="2"
								width="20"
								height="20"
								rx="5"
								ry="5"
							></rect><path
								d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
							></path><line
								x1="17.5"
								y1="6.5"
								x2="17.51"
								y2="6.5"
							></line></svg
						>
					</a>
				</li>
				<li>
					<a
						href="https://facebook.com"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="Síguenos en Facebook"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							><path
								d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
							></path></svg
						>
					</a>
				</li>
				<li>
					<a
						href="https://twitter.com"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="Síguenos en Twitter"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							><path
								d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
							></path></svg
						>
					</a>
				</li>
				<li>
					<a
						href="https://youtube.com"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="Síguenos en YouTube"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							><path
								d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"
							></path><polygon
								points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"
							></polygon></svg
						>
					</a>
				</li>
			</ul>
		</div>
	</div>
	<div class="footer__bottom">
		<p class="footer__copyright">
			© {new Date().getFullYear()} Infinity GYM. Todos los derechos reservados.
		</p>
		<nav class="footer__nav">
			<ul class="o-ui-list--horizontal">
				<li>
					<a
						href="/"
						class="footer__link"
						>Términos y Condiciones</a
					>
				</li>
				<li>
					<a
						href="/"
						class="footer__link"
						>Política de Privacidad</a
					>
				</li>
				<li>
					<a
						href="/"
						class="footer__link"
						>Contacto</a
					>
				</li>
			</ul>
		</nav>
	</div>
</footer>
